        ],
        "line-dasharray": [6, 3],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, [
            "case",
            ["==", ["get", "usage"], "main"], 2,
            ["==", ["get", "usage"], "branch"], 1.5,
            1
          ],
          12, [
            "case",
            ["==", ["get", "usage"], "main"], 4,
            ["==", ["get", "usage"], "branch"], 3,
            2
          ],
          16, [
            "case",
            ["==", ["get", "usage"], "main"], 6,
