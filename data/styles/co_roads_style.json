{
  "version": 8,
  "name": "Colorado Roads",
  "metadata": {
    "description": "Road network in Colorado with highway classification"
  },
  "sources": {
    "tilecraft": {
      "type": "vector",
      "url": "mbtiles://co_roads.mbtiles"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#2C3E50"
      }
    },
    {
      "id": "roads-casing",
      "source": "tilecraft",
      "source-layer": "roads",
      "minzoom": 6,
      "maxzoom": 18,
      "type": "line",
      "paint": {
        "line-color": "#1A1D20",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, [
            "case",
            ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link"]]], 5,
            ["in", ["get", "highway"], ["literal", ["trunk", "trunk_link"]]], 4,
            ["in", ["get", "highway"], ["literal", ["primary", "primary_link"]]], 3,
            ["in", ["get", "highway"], ["literal", ["secondary", "secondary_link"]]], 2,
            1
          ],
          12, [
            "case",
            ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link"]]], 12,
            ["in", ["get", "highway"], ["literal", ["trunk", "trunk_link"]]], 9,
            ["in", ["get", "highway"], ["literal", ["primary", "primary_link"]]], 7,
            ["in", ["get", "highway"], ["literal", ["secondary", "secondary_link"]]], 5,
            2
          ],
          16, [
            "case",
            ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link"]]], 18,
            ["in", ["get", "highway"], ["literal", ["trunk", "trunk_link"]]], 15,
            ["in", ["get", "highway"], ["literal", ["primary", "primary_link"]]], 12,
            ["in", ["get", "highway"], ["literal", ["secondary", "secondary_link"]]], 9,
            4
          ]
        ],
        "line-opacity": 0.6
      }
    },
    {
      "id": "roads",
      "source": "tilecraft",
      "source-layer": "roads",
      "minzoom": 6,
      "maxzoom": 18,
      "type": "line",
      "paint": {
        "line-color": [
          "case",
          ["==", ["get", "highway"], "motorway"], "#212529",
          ["==", ["get", "highway"], "motorway_link"], "#212529",
          ["==", ["get", "highway"], "trunk"], "#343A40",
          ["==", ["get", "highway"], "trunk_link"], "#343A40", 
          ["==", ["get", "highway"], "primary"], "#495057",
          ["==", ["get", "highway"], "primary_link"], "#495057",
          ["==", ["get", "highway"], "secondary"], "#6C757D",
          ["==", ["get", "highway"], "secondary_link"], "#6C757D",
          ["==", ["get", "highway"], "tertiary"], "#868E96",
          ["==", ["get", "highway"], "tertiary_link"], "#868E96",
          ["==", ["get", "highway"], "residential"], "#ADB5BD",
          ["==", ["get", "highway"], "unclassified"], "#ADB5BD",
          ["==", ["get", "highway"], "service"], "#CED4DA",
          "#DEE2E6"
        ],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, [
            "case",
            ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link"]]], 4,
            ["in", ["get", "highway"], ["literal", ["trunk", "trunk_link"]]], 3,
            ["in", ["get", "highway"], ["literal", ["primary", "primary_link"]]], 2.5,
            ["in", ["get", "highway"], ["literal", ["secondary", "secondary_link"]]], 1.5,
            0.5
          ],
          12, [
            "case",
            ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link"]]], 10,
            ["in", ["get", "highway"], ["literal", ["trunk", "trunk_link"]]], 7,
            ["in", ["get", "highway"], ["literal", ["primary", "primary_link"]]], 5.5,
            ["in", ["get", "highway"], ["literal", ["secondary", "secondary_link"]]], 4,
            1.5
          ],
          16, [
            "case",
            ["in", ["get", "highway"], ["literal", ["motorway", "motorway_link"]]], 15,
            ["in", ["get", "highway"], ["literal", ["trunk", "trunk_link"]]], 12,
            ["in", ["get", "highway"], ["literal", ["primary", "primary_link"]]], 9,
            ["in", ["get", "highway"], ["literal", ["secondary", "secondary_link"]]], 7,
            3
          ]
        ],
        "line-opacity": 0.9
      }
    }
  ]
}